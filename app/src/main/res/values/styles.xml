<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--低栏Button的样式-->
    <style name="BottonTabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/btn_tab_drawable_padding</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/btn_tab_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/btn_tab_text_selector</item>
    </style>
</resources>
